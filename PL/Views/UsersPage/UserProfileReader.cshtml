@model UserProfileViewModel

@{
    ViewData["Title"] = "Користувач";
}

@section Styles {
    <link rel="stylesheet" href="~/css/cabinet.css" />
    <link rel="stylesheet" href="~/css/voting.css" />
}

<h2>Інформація про користувача</h2>
<table>
    <tr>
        <td>ПІБ:</td>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <td>Електронна пошта:</td>
        <td><a href="mailto:@Model.Email">@Model.Email</a></td>
    </tr>
    <tr>
        <td>Тег телеграм:</td>
        <td><a href="https://t.me/@Model.TelegramTag.Substring(1)">@Model.TelegramTag</a></td>
    </tr>
    <tr>
        <td>Група:</td>
        <td>@Model.Group</td>
    </tr>
    <tr>
        <td>Факультет:</td>
        <td>@Model.Faculty</td>
    </tr>
    <tr>
        <td>Ролі:</td>
        @{
            string roles = "";
        }

        @foreach (var role in Model.Roles)
        {
            roles += role + ", ";
        }
        @{
            roles = roles.Remove(roles.Length - 2);
        }
        <td>@roles</td>
    </tr>
</table>

