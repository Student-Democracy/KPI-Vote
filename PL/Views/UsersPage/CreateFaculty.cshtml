@using System.Globalization;


@model FacultyViewModel

@{
    ViewData["Title"] = "Створити факультет";
}

@section Styles {
    <link rel="stylesheet" href="~/css/users-page2.css" />
}

@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script type="text/javascript" src="~/js/show-list-script.js"></script>
}

<h2>Створити факультет</h2>
<br>
<div style="border-color: orange;" class="blocking">
    <form id="block-user" class="block-user" method="POST">
        <br />
        <label>Створіть факультет, ввівши його абревіатуру. Наприклад, ФІОТ.</label><br>
        <br />
        <label for="Name">
            Навза факультету:
            <input type="text" name="Name" value="" required>
        </label>
        <br /><br />
        <button type="submit">Створити факультет</button>
    </form>
</div>

