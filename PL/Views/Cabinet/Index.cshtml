@model UserProfileViewModel

@{
    ViewData["Title"] = "Профіль";
}

@section Styles {
    <link rel="stylesheet" href="~/css/cabinet.css" />
}

<h2>Особистий кабінет</h2>
<br>
<table>
    <tr>
        <td>ПІБ:</td>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <td>Електронна пошта:</td>
        <td><a href="mailto:@Model.Email">@Model.Email</a></td>
    </tr>
    <tr>
        <td>Тег телеграм:</td>
        <td>@Model.TelegramTag</td>
    </tr>
    <tr>
        <td>Група:</td>
        <td>@Model.Group</td>
    </tr>
    <tr>
        <td>Факультет:</td>
        <td>@Model.Faculty</td>
    </tr>
    <tr>
        <td>Ролі:</td>
        @{
            string roles = "";
        }

        @foreach (var role in Model.Roles)
        {
            roles += role + ", ";
        }
        @{
            roles = roles.Remove(roles.Length - 2);
        }
        <td>@roles</td>
    </tr>
</table>
<br>
<div class="btns-container">
    <a  asp-area="" asp-controller="Cabinet" asp-action="ChangeEmail">Змінити електронну пошту</a>
    <a  asp-area="" asp-controller="Cabinet" asp-action="ChangePassword">Змінити пароль</a>
    <a class="red" asp-area="" asp-controller="Account" asp-action="Logout">Вийти</a>
</div>
<br>